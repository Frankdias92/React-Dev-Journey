{
  "version": 2,
  "builds": [
    {
      "src": "vite.config.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/transactions", "dest": "server.json" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
